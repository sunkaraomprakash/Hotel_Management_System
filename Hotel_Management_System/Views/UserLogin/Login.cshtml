@model Hotel_Management_System.Models.User
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <style>
        .logo-w3 {
            position: relative;
            font-family: Arial;
        }

        .text-block {
            position: absolute;
            bottom: 20px;
            right: 20px;
            background-color: blanchedalmond;
            color: white;
            padding-left: 20px;
            padding-right: 20px;
        }



        body {
            background-repeat: no-repeat;
            background-image: url('../../Images/login.png');
            background-attachment: fixed;
            background-size: cover;
        }
    </style>



</head>
</html>
<center>
    <div class="main" style="color:white">

        <div class="main-w3l">
            <canvas id="myCanvas"></canvas>
            <h1 class="logo-w3">Hotel Management System</h1>

            <h1>Login Now</h1>
            <form action="#" method="post">
           

                <div class="form-group">
                    <div class="col-md-10">
                        <h2>WorkDomain :  @Html.EditorFor(model => model.WorkDomain, new { htmlAttributes = new { @class = "cntrol col-md-2" } })</h2>
                        @Html.ValidationMessageFor(model => model.WorkDomain, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <h2>UserName  :  @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "cntrol col-md-2" } })</h2>
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-md-10">
                        <h2>Password   :  @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "cntrol col-md-2" } })</h2>
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <input type="submit" value="Login" class="btn btn-primary" >
                    <button> <a href="https://localhost:44376/UserLogin/Index">Signin</a></button>
              

            </form>



            <div class="clear"></div>
            <!-- //main -->
        </div>
    </div>
</center>


