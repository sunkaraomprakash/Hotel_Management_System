@model Hotel_Management_System.Models.User

@{
    ViewBag.Title = "Index";
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <style>
        .logo-w3 {
            position: relative;
            font-family: Arial;
        }



        .text-block {
            position: absolute;
            bottom: 20px;
            right: 20px;
            background-color: blanchedalmond;
            color: white;
            padding-left: 20px;
            padding-right: 20px;
        }



        body {
            background-repeat: no-repeat;
            background-image: url('../../Images/Signup1.png');
            background-attachment: fixed;
            background-size: cover;
        }
    </style>

</head>
</html>
<center>



    @using (Html.BeginForm()) {
        <canvas id="myCanvas"></canvas>
        @Html.AntiForgeryToken()
        <h1 style="color:white">Register</h1>

        <div class="form-horizontal" style="color:white">

            <h3>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-10">
                        <h2>WorkDomain  :   @Html.EditorFor(model => model.WorkDomain, new { htmlAttributes = new { @class = "form-control" } })</h2>
                        @Html.ValidationMessageFor(model => model.WorkDomain, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <h2>UserName :   @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } }) </h2>
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <h2>Password    :     @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })</h2>
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <h2>
                            Re-Password    :    @Html.EditorFor(model => model.RePassword, new { htmlAttributes = new { @class = "form-control" } })
                        </h2>
                            @Html.ValidationMessageFor(model => model.RePassword, "", new { @class = "text-danger" })
</div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="save" class="btn btn-default" />

                        <button><a href="https://localhost:44376">Login</a></button>
                    </div>
                </div>

            </h3>

        </div>
    }

</center>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
